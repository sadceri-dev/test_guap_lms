<table class="table table-striped">
    <thead>
        <tr>
            <th>Студенты</th>
            <th>Баллы</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        {% for grade in grades %}
            <tr>
                <td>
                    {% if grade.student %}
                        {{ grade.student.email }}
                    {% else %}
                        <em>Нет зачисленных студентов</em>
                    {% endif %}
                </td>
                <td>{{ grade.score is not null ? grade.score : 'Не оценено' }}</td>
                <td>
                    <a href="{{ path('teacher_edit_grade', {disciplineId: discipline.id, studentId: grade.student.id}) }}" 
                       class="btn btn-sm btn-warning">Редактировать</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3" class="text-center">Нет оцененных.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
