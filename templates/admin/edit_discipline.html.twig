{% extends 'base.html.twig' %}

{% block title %}Редактирование дисциплин{% endblock %}

{% block body %}
<h2>Редактирование дисциплин</h2>

{{ form_start(form) }}
    <div class="mb-3">
        {{ form_label(form.name, 'Имя дисциплины') }}
        {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="mb-3">
        {{ form_label(form.teacher, 'Учитель') }}
        {{ form_widget(form.teacher, { 'attr': {'class': 'form-control'} }) }}
    </div>
    <button type="submit" class="btn btn-success">Сохранить</button>
{{ form_end(form) }}

<a href="{{ path('admin_disciplines') }}" class="btn btn-secondary mt-3">Вернуться назад</a>
{% endblock %}
