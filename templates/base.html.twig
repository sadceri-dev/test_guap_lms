<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}LMS TEST SOKOLOV{% endblock %}</title>
    <link href="{{ asset('bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <header class="bg-light py-2 mb-3">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light">
                <a class="navbar-brand" href="#">LMS</a>
                <ul class="navbar-nav ms-auto">
                    {% if app.user %}
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_logout') }}">Выйти</a></li>
                    {% else %}
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_login') }}">Войти</a></li>
                    {% endif %}
                </ul>
            </nav>
        </div>
    </header>
    <main class="container">
        {% block body %}{% endblock %}
    </main>
    <script src="{{ asset('bootstrap/css/bootstrap.bundle.min.js') }}"></script>
    {% block javascripts %}{% endblock %}
</body>
</html>
